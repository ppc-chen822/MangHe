.flex{
    margin: 40rpx auto;
    width: 90%;
    display: flex;
    flex-direction:column;
}
.btn-get{
    background-color: #e0edfe;
}
.btn-get>text{
    line-height: 300rpx;
}
.btn-save{
    background-color: #eadff0;
}
.btn-save>image{
    width: 50%;
    height: 300rpx;
    padding: 20rpx;
    float: left;
}
.btn-save>text{
    line-height: 300rpx;
}
.btn-get>image{
    width: 50%;
    height: 300rpx;
    padding: 20rpx;
    float: right;
}
.btn-get,.btn-save {
    width: 100%;
    height: 300rpx;
    box-sizing: border-box;
    /* border: 2rpx solid #333; */
    text-align: center;
    font-size: 70rpx;
    font-weight: 700;
    margin: 40rpx auto;
    border-radius: 20rpx;
}
.share-btn {
    text-align: center;
    width: 200rpx;
    height: 90rpx;
    box-sizing: border-box;
    /* border: 2rpx solid #333; */
    color: #000000;
    font-size: 40rpx;
    font-weight: bold;
    border-radius: 20rpx;
    margin-bottom: 10rpx;
    background-color: #a18cd1;
}